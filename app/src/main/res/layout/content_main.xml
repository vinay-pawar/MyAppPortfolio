<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.udacitynanodegree.vinay.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text="@string/mynanodegreeapps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:height="@dimen/txt_vw_height"
        android:width="@dimen/txt_vw_width"
        android:layout_marginBottom="@dimen/txtvw_mgr_btm"
        android:textSize="25sp"
        android:textAlignment="center"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/sptystmr"
        android:onClick="btnClicked"
        android:background="@color/btn_color"
        android:textColor="@color/txt_color"
        android:layout_below="@+id/textView"
        android:height="@dimen/btn_height"
        android:width="@dimen/btn_width"
        android:layout_marginBottom="@dimen/mgr_btm"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/txt_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scrapp"
        android:background="@color/btn_color"
        android:textColor="@color/txt_color"
        android:height="@dimen/btn_height"
        android:width="@dimen/btn_width"
        android:layout_marginBottom="@dimen/mgr_btm"
        android:layout_below="@+id/sptystmr"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/txt_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/libapp"
        android:background="@color/btn_color"
        android:textColor="@color/txt_color"
        android:height="@dimen/btn_height"
        android:width="@dimen/btn_width"
        android:layout_marginBottom="@dimen/mgr_btm"
        android:textSize="@dimen/txt_size"
        android:layout_below="@+id/scrapp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/blditbig"
        android:background="@color/btn_color"
        android:textColor="@color/txt_color"
        android:height="@dimen/btn_height"
        android:width="@dimen/btn_width"
        android:layout_marginBottom="@dimen/mgr_btm"
        android:textSize="@dimen/txt_size"
        android:layout_below="@+id/libapp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/xyzrdr"
        android:background="@color/btn_color"
        android:textColor="@color/txt_color"
        android:height="@dimen/btn_height"
        android:width="@dimen/btn_width"
        android:layout_marginBottom="@dimen/mgr_btm"
        android:textSize="@dimen/txt_size"
        android:layout_below="@+id/blditbig"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/capstone"
        android:background="@color/cpstone_color"
        android:textColor="@color/txt_color"
        android:height="@dimen/btn_height"
        android:width="@dimen/btn_width"
        android:layout_marginBottom="@dimen/mgr_btm"
        android:textSize="@dimen/txt_size"
        android:layout_below="@+id/xyzrdr"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
